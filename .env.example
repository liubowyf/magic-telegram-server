# Telegram API配置
# 从 https://my.telegram.org/apps 获取
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE_NUMBER=your_phone_number_here

# Telegram路径配置
# 数据目录（可选，默认使用系统临时目录）
TELEGRAM_DATA_DIR=/path/to/telegram/data
# 会话目录（可选，默认使用数据目录下的sessions）
TELEGRAM_SESSION_DIR=/path/to/telegram/sessions
# 日志目录（可选，默认使用数据目录下的logs）
TELEGRAM_LOG_DIR=/path/to/telegram/logs
# 临时目录（可选，默认使用系统临时目录）
TELEGRAM_TEMP_DIR=/path/to/telegram/temp

# 数据库配置
MONGODB_URI=mongodb://admin:password@host:port/database?authSource=admin
MONGODB_DATABASE=telegram

# 服务器配置
SERVER_PORT=8080

# 日志配置
LOG_FILE=logs/telegram-server.log

# 应用配置
SPRING_PROFILES_ACTIVE=dev