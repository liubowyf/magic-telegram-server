# =================================
# Magic Telegram Server 环境变量配置模板
# 作者: liubo
# 日期: 2025-08-25
# 描述: 内置MongoDB部署的环境变量配置
# =================================

# =================================
# 应用基础配置
# =================================

# 应用版本
APP_VERSION=v1.2.0

# Spring配置
SPRING_PROFILES_ACTIVE=docker
SERVER_PORT=8080
APP_PORT=8080

# 时区配置
TIMEZONE=Asia/Shanghai

# =================================
# MongoDB配置（内置）
# =================================

# MongoDB认证
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_password_here
MONGO_DATABASE=telegram_db
MONGO_PORT=27017

# =================================
# Telegram Bot配置
# =================================

# Telegram Bot Token（必须配置）
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram Bot用户名
TELEGRAM_BOT_USERNAME=your_bot_username

# =================================
# JVM配置
# =================================

# JVM内存配置
JVM_XMS=512m
JVM_XMX=1g
JVM_MAX_RAM_PERCENTAGE=75.0

# =================================
# 日志配置
# =================================

# 日志级别
LOG_LEVEL=INFO
APP_LOG_LEVEL=DEBUG

# =================================
# 资源限制配置
# =================================

# 应用资源限制
APP_MEMORY_LIMIT=2G
APP_CPU_LIMIT=2.0
APP_MEMORY_RESERVATION=1G
APP_CPU_RESERVATION=1.0

# =================================
# 监控配置
# =================================

# Actuator端点
ACTUATOR_ENDPOINTS=health,info,metrics
HEALTH_SHOW_DETAILS=when_authorized

# =================================
# 安全配置
# =================================

# 管理员配置（如果需要）
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_admin_password_here

# JWT配置（如果使用）
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=86400

# =================================
# 其他配置
# =================================

# 文件上传配置
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=10MB

# 数据库连接池配置
DB_MAX_POOL_SIZE=20
DB_MIN_POOL_SIZE=5

# =================================
# 使用说明:
# 
# 1. 复制此文件为 .env:
#    cp .env.example .env
# 
# 2. 修改必要的配置项:
#    - TELEGRAM_BOT_TOKEN: 必须配置你的Bot Token
#    - MONGO_ROOT_PASSWORD: 建议修改默认密码
#    - ADMIN_PASSWORD: 如果使用管理功能，请修改密码
# 
# 3. 启动服务:
#    docker-compose up -d
# 
# 注意: .env文件包含敏感信息，不要提交到版本控制系统
# =================================