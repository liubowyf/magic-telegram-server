# =================================
# Magic Telegram Server 环境变量配置
# 作者: liubo
# 日期: 2025-01-15
# 描述: 开发环境配置
# =================================

# =================================
# 应用基础配置
# =================================

# 应用版本
APP_VERSION=v1.2.0

# Spring配置
SPRING_PROFILES_ACTIVE=docker
SERVER_PORT=8080
APP_PORT=8080

# 时区配置
TIMEZONE=Asia/Shanghai

# =================================
# MongoDB配置（内置）
# =================================

# MongoDB认证
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=telegram_secure_password_2025
MONGO_DATABASE=telegram_db
MONGO_PORT=27017

# =================================
# Telegram Bot配置
# =================================

# Telegram Bot Token（开发环境占位符）
TELEGRAM_BOT_TOKEN=demo_token_for_development

# Telegram Bot用户名
TELEGRAM_BOT_USERNAME=demo_bot

# =================================
# JVM配置
# =================================

# JVM内存配置
JVM_XMS=512m
JVM_XMX=1g
JVM_MAX_RAM_PERCENTAGE=75.0